            </div>
          <% end %>
          <div class="card-infos">
            <h2><%= villa.name %></h2>
            <p><%= villa.city %></p>
            <p>A partir de <%= villa.price_per_day %>â‚¬ /nuit</p>
          </div>
          <div class="card-tag">
