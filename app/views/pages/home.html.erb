<%= render 'shared/navbar' %>


<div id="header" class="carousel slide" data-ride="carousel" data-keyboard="false">

  <div class="carousel-inner">
    <div class="carousel-item active">
      <%= image_tag "homepage/header-bg-1.jpg", class: "img-carousel" %>
    </div>
    <div class="carousel-item">
      <%= image_tag "homepage/header-bg-2.jpg", class: "img-carousel" %>
    </div>
    <div class="carousel-item">
      <%= image_tag "homepage/header-bg-3.jpg", class: "img-carousel" %>
    </div>
    <div class="carousel-item">
      <%= image_tag "homepage/header-bg-4.jpeg", class: "img-carousel" %>
    </div>
    <div class="carousel-item">
      <%= image_tag "homepage/header-bg-5.jpg", class: "img-carousel" %>
    </div>
    <div class="carousel-item">
      <%= image_tag "homepage/header-bg-6.jpg", class: "img-carousel" %>
    </div>
  </div>

</div>

<div class="container">

  <%= simple_form_for :search, url: villas_path, method: "GET", html: { class: 'form-home form-inline' } do |f| %>
    <%= f.input :city, placeholder: "Ville", label: false, input_html: { class: 'input' } %>
    <%= f.input :starts_on, placeholder: "Date d'arrivée", label: false, input_html: { class: 'input', id: 'input-small' } %>
    <%= f.input :ends_on, placeholder: "Date de départ", label: false, input_html: { class: 'input', id: 'input-small' } %>
    <%= f.input :number_of_guests, placeholder: "Voyageurs", label: false, input_html: { class: 'input', id: 'input-small' } %>
    <%= f.button :submit, "Rechercher", class: "btn btn-info p-2" %>
  <% end %>

</div>


